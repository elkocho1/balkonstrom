            </a>
          {%- endif -%}
  
          {%- if section.settings.show_checkout_button -%}
            {%- render 'button',
              type: 'submit',
              content: checkout_label,
              icon: 'picto-lock',
              name: 'checkout',
              size: 'xl'
            -%}
          {%- endif -%}
        </form>
    </div>
  {%- endif -%}
</cart-drawer>

