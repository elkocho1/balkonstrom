            {% assign image = block.settings.image %}
            {% if image == blank %}
              {% assign svg_class = 'ab-svg-placeholder ab-banner-image-' | append: section.id %}
              {{ 'image' | placeholder_svg_tag: svg_class }}
            {% else %}
              <img
